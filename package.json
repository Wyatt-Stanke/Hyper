{
	"name": "hypermc",
	"version": "0.0.0",
	"private": false,
	"workspaces": [
		"packages/*",
		"modules/*"
	],
	"type": "module",
	"scripts": {
		"publish": "turbo run deploy",
		"build": "turbo run build:prod --no-cache --concurrency=12",
		"dev": "turbo run dev --parallel --no-cache",
		"lint": "xo --fix",
		"test": "source .env && turbo run test --no-cache",
		"test:ci": "turbo run test --no-cache",
		"format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,json}\"",
		"release": "npm run build && changeset publish"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.139",
		"@swc/jest": "^0.2.17",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.18",
		"@types/nodemon": "^1.19.1",
		"@types/prettier": "^2.4.4",
		"@types/xo": "^0.39.2",
		"concurrently": "^7.0.0",
		"danger": "^11.0.2",
		"dotenv": "^16.0.0",
		"eslint-config-prettier": "^8.3.0",
		"find-up": "^6.3.0",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"prettier-plugin-jsdoc": "^0.3.30",
		"regenerator-runtime": "^0.13.9",
		"turbo": "latest",
		"typescript": "^4.5.5",
		"typesync": "^0.8.0",
		"xo": "^0.48.0"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"packageManager": "npm@8.4.1",
	"dependencies": {
		"@changesets/cli": "^2.21.0"
	}
}
